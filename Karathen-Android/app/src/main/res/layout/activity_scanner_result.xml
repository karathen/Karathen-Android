<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipChildren="true"
    android:background="@color/title_bar_color"
    tools:context=".ui.ScannerResultActivity">
    
    <com.raistone.wallet.sealwallet.widget.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_52"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/wirte"
        >

        <RelativeLayout
            android:id="@+id/copy_rl"
            android:layout_marginTop="@dimen/space_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/result_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="sdjfksdkflslkdfjsldkfjslkdjfslkdfjksldsdfsd;kf;sldkf;lskdlf;sldfks;ldfs;kd;fkksl;dfls;kf"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_toLeftOf="@+id/copy_lv"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"

                />

            <ImageView
                android:id="@+id/copy_lv"
                android:layout_width="@dimen/space_16"
                android:layout_height="@dimen/space_16"
                android:background="@drawable/copy_address_icon"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/space_15"
                />
        </RelativeLayout>

    </LinearLayout>
    

    

</LinearLayout>