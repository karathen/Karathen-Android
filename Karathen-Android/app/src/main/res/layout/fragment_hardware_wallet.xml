<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/space_180"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:background="@drawable/hardware_icon" />

            <LinearLayout
                android:id="@+id/tips_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView1"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/hardware_wallet_string"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="15dp"
                    android:lineSpacingExtra="8dp"
                    android:lineSpacingMultiplier="1"
                    android:text="@string/hardware_wallet_tips_string"
                    android:textSize="13dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tips_id"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="40dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:background="@drawable/ads_oval_shape_blue" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/ads_oval_shape_others" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/ads_oval_shape_others" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/ads_oval_shape_others" />

            </LinearLayout>

            <Button
                android:id="@+id/create_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_index"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="@dimen/space_30"
                android:background="@drawable/btn_bg"
                android:text="@string/connecting_device"
                android:textColor="@color/white"
                android:visibility="visible" />



        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stay_tuned"
            android:gravity="center"
            android:visibility="gone"
            />
    </LinearLayout>

</ScrollView>