<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/rl_container"
        android:layout_width="@dimen/common_dp_300"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/common_dp_16"
                android:layout_marginTop="@dimen/common_dp_16"
                android:text="@string/seal_email_string"
                android:textColor="@color/common_title_color"
                tools:text="@string/seal_email_string" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_dialog_title"
                android:background="@color/common_line_color" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_dialog_title"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/common_dp_16"
                android:layout_marginTop="@dimen/common_dp_16"
                android:gravity="center"
                android:text="@string/copy_string"
                android:textColor="@color/common_blue_color"
                android:textSize="@dimen/common_sp_16"
                tools:text="复制" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>