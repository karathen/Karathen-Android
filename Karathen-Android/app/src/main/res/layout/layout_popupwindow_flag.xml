<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_centerInParent="true"
    android:orientation="vertical">
   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_40"
        >

        <TextView
            android:id="@+id/assets_sign_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/assets_sign_string"
            android:layout_weight="1"
            android:textSize="@dimen/space_12"
            android:textColor="@color/three_color"
            android:layout_gravity="right|center"
            android:gravity="right"
            />


        <TextView
            android:id="@+id/assets_sign_value_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="ETH"
            android:layout_toRightOf="@+id/assets_sign_tv"
            android:layout_weight="1"
            android:textSize="@dimen/space_12"
            android:textColor="@color/three_color"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/space_10"
            />

    </LinearLayout>
    <View style="@style/h_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_40"
        >

        <TextView
            android:id="@+id/assets_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/assets_name_string"
            android:layout_weight="1"
            android:textSize="@dimen/space_12"
            android:textColor="@color/three_color"
            android:layout_gravity="right|center"
            android:gravity="right"
            />


        <TextView
            android:id="@+id/assets_name_value_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="ETHer"
            android:layout_toRightOf="@+id/assets_sign_tv"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="@dimen/space_12"
            android:textColor="@color/three_color"
            android:layout_marginLeft="@dimen/space_10"
            />

    </LinearLayout>
    <View style="@style/h_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_40"
        >

        <TextView
            android:id="@+id/assets_type_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/assets_type_string"
            android:layout_weight="1"
            android:layout_gravity="right|center"
            android:gravity="right"
            android:textSize="@dimen/space_12"
            android:textColor="@color/three_color"
            />


        <TextView
            android:id="@+id/assets_type_value_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="ETH"
            android:layout_toRightOf="@+id/assets_sign_tv"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/space_10"
            android:textSize="@dimen/space_12"
            android:textColor="@color/three_color"
            />

    </LinearLayout>
    <View style="@style/h_line"/>



    <LinearLayout
        android:id="@+id/copy_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/contract_address_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contract_address_string"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/space_10"
            android:textSize="@dimen/space_12"
            android:textColor="@color/three_color"
            />


        <TextView
            android:id="@+id/contract_address_value_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="ETH"
            android:layout_toRightOf="@+id/assets_sign_tv"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/space_12"
            android:textColor="@color/three_color"
            android:layout_marginTop="@dimen/space_10"
            />

    </LinearLayout>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/warning_string"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/space_10"
        android:textColor="@color/main_color"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginBottom="@dimen/space_10"
        />


</LinearLayout>
