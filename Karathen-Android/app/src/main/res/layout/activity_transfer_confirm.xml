<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipChildren="true"
    android:background="@color/title_bar_color"
    tools:context=".ui.TransferConfirmActivity">


    <com.raistone.wallet.sealwallet.widget.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_52"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/wirte"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/space_10"
            >

            <TextView
                android:id="@+id/money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="3393.5995"
                android:textColor="@color/three_color"
                android:textSize="@dimen/space_15"
                />
            <TextView
                android:id="@+id/coin_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="ETH"
                android:textSize="@dimen/space_9"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:textColor="#425264"
                android:layout_marginLeft="@dimen/space_5"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_18"
            android:layout_marginTop="@dimen/space_20"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/collection_address_string"
                android:textSize="@dimen/space_12"
                android:textColor="@color/three_color"
                />

            <TextView
                android:id="@+id/collection_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="0xffkashdk79...7239keh830866555"
                android:textSize="@dimen/space_10"
                android:textColor="#90939b"
                android:layout_marginTop="@dimen/dp_4"
                />

            <View style="@style/h_line" android:layout_marginTop="@dimen/space_20"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_18"
            android:layout_marginTop="@dimen/space_20"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/paying_address_string"
                android:textSize="@dimen/space_12"
                android:textColor="@color/three_color"
                />

            <TextView
                android:id="@+id/paying_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="0xffkashdk79...7239keh830866555"
                android:textSize="@dimen/space_10"
                android:textColor="#90939b"
                android:layout_marginTop="@dimen/dp_4"
                />

            <View style="@style/h_line" android:layout_marginTop="@dimen/space_20"/>


        </LinearLayout>




        <LinearLayout
            android:id="@+id/remark_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_18"
            android:layout_marginTop="@dimen/space_20"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remark_string"
                android:textSize="@dimen/space_12"
                android:textColor="@color/three_color"
                />

            <TextView
                android:id="@+id/remark_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="0xffkashdk79...7239keh830866555"
                android:textSize="@dimen/space_10"
                android:textColor="#90939b"
                android:layout_marginTop="@dimen/dp_4"
                />

            <View style="@style/h_line" android:layout_marginTop="@dimen/space_20"/>


        </LinearLayout>


        <RelativeLayout
            android:id="@+id/miner_cost_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_18"
            android:layout_marginTop="@dimen/space_20"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/miner_cost_string"
                android:textSize="@dimen/space_12"
                android:layout_centerVertical="true"
                android:textColor="@color/three_color"
                />

            <TextView
                android:id="@+id/miner_cost_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="0.00054 eth"
                android:layout_toLeftOf="@+id/right_icon"
                android:layout_marginRight="@dimen/space_10"
                android:layout_centerVertical="true"
                />

            <ImageView
                android:id="@+id/right_icon"
                android:layout_width="@dimen/space_8"
                android:layout_height="@dimen/space_12"
                android:background="@drawable/back_right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/space_15"
                android:layout_centerVertical="true"
                android:rotation="90"
                />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/kgfy_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >


            <TextView
                android:id="@+id/gas_price_tv"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.01"
                android:layout_marginTop="@dimen/space_10"
                />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:max="100"
                android:min="1"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginTop="@dimen/space_10"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/slow_string"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/space_20"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fast_string"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/space_20"
                    android:layout_gravity="center|right"
                    android:gravity="right"
                    />

            </LinearLayout>

        </LinearLayout>




        
        
        <Button
            android:id="@+id/confirm_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_43"
            android:text="@string/confirm_string"
            android:textColor="@color/wirte"
            android:textSize="@dimen/space_13"
            android:layout_marginTop="@dimen/space_40"
            android:background="@drawable/btn_bg"
            android:layout_marginLeft="@dimen/space_40"
            android:layout_marginRight="@dimen/space_40"
            />

    </LinearLayout>


</LinearLayout>