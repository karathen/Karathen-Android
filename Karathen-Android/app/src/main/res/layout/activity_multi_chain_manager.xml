<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/title_bar_color"
    android:fitsSystemWindows="true"
    android:clipChildren="true"
    tools:context=".ui.MultiChainManagerActivity">



    <com.raistone.wallet.sealwallet.widget.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_52"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/wirte"
        android:orientation="vertical"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/wirte"
            android:layout_marginLeft="@dimen/space_15"
            android:textSize="@dimen/space_12"
            android:layout_marginTop="@dimen/space_10"
            android:textColor="#90939b"
            android:layout_marginRight="@dimen/space_15"
            android:text="@string/chain_tips_string"
            />

        <View style="@style/h_line"
            android:layout_marginTop="@dimen/space_10"
            />

        <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
            android:background="@color/wirte"
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>


</LinearLayout>