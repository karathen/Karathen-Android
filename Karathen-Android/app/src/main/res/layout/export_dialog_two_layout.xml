<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:background="@drawable/custom_dialog_bot_white"
    android:layout_marginLeft="@dimen/space_45"
    android:layout_marginRight="@dimen/space_45"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/space_10"
            >

            <TextView
                android:id="@+id/title_tv_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/export_private_key_string"
                android:gravity="center"
                android:textColor="@color/three_color"
                android:textSize="@dimen/space_15"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/space_10"
                />

            <ImageView
                android:id="@+id/delete_iv"
                android:layout_width="@dimen/space_15"
                android:layout_height="@dimen/space_15"
                android:background="@drawable/delete_icon"
                android:layout_gravity="right|center"
                android:layout_marginRight="@dimen/space_15"
                />

        </LinearLayout>



        
        <TextView
            android:id="@+id/warning_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/safety_warning_string"
            android:textColor="@color/main_color"
            android:layout_marginTop="@dimen/space_10"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_marginRight="@dimen/space_15"
            android:lineSpacingMultiplier="1"
            android:lineSpacingExtra="4dp"
            />



        <TextView
            android:id="@+id/private_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0xsdfjsodfijwoefjweiofiojewfefweefewhfjeewfjwefjiwe"
            android:layout_marginTop="@dimen/space_10"
            android:background="@drawable/export_tv_bg"
            android:lineSpacingMultiplier="1"
            android:lineSpacingExtra="1dp"
            android:padding="@dimen/space_5"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_marginRight="@dimen/space_15"
            />


        <ImageView
            android:id="@+id/qrcode_iv"
            android:layout_marginTop="@dimen/space_10"
            android:layout_width="@dimen/space_170"
            android:layout_height="@dimen/space_170"
            android:layout_gravity="center"
            />


        <Button
            android:id="@+id/copy_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_43"
            android:text="@string/copy_string"
            android:background="@drawable/btn_bg"
            android:textColor="@color/wirte"
            android:textSize="@dimen/space_12"
            android:layout_marginTop="@dimen/space_20"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_marginRight="@dimen/space_15"
            android:layout_marginBottom="@dimen/space_20"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_40"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/cancel_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/cancel_string"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textSize="@dimen/space_15"
                android:gravity="center"
                android:textColor="@color/main_color"
                />

            <View style="@style/v_line"/>

            <TextView
                android:id="@+id/confirm_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/confirm_string"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/space_15"
                android:layout_gravity="center"
                android:textColor="@color/main_color"
                />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>