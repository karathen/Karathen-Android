<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/title_bar_color"
    android:fitsSystemWindows="true"
    android:clipChildren="true"
    tools:context=".ui.WalletAddressManageActivity">

    <com.raistone.wallet.sealwallet.widget.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_52"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/common_white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/common_dp_8"
                android:paddingLeft="@dimen/common_dp_18"
                android:paddingRight="@dimen/common_dp_18"
                android:paddingTop="@dimen/common_dp_16">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/address_string"
                    android:textColor="@color/common_title_color"
                    android:textSize="@dimen/common_sp_14" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_title"
                    android:layout_marginTop="@dimen/common_dp_8"
                    android:textColor="@color/edit_text_input_color"
                    android:textSize="@dimen/common_sp_13"
                    tools:hint="0xqwe89bur568dadad" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dp_1"
                android:layout_marginLeft="@dimen/common_dp_16"
                android:layout_marginRight="@dimen/common_dp_16"
                android:background="@color/common_line_color" />

            <RelativeLayout
                android:id="@+id/update_wallet_name_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/common_dp_8"
                android:paddingLeft="@dimen/common_dp_18"
                android:paddingRight="@dimen/common_dp_18"
                android:paddingTop="@dimen/common_dp_16">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wallet_name_string"
                    android:textColor="@color/common_title_color"
                    android:textSize="@dimen/common_sp_14" />

                <TextView
                    android:id="@+id/tv_wallet_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginTop="@dimen/common_dp_8"
                    android:textColor="@color/edit_text_input_color"
                    android:textSize="@dimen/common_sp_13"
                    tools:text="ETH-1" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dp_1"
                android:layout_marginLeft="@dimen/common_dp_16"
                android:layout_marginRight="@dimen/common_dp_16"
                android:background="@color/common_line_color" />

            <RelativeLayout
                android:id="@+id/export_mnemonic_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/common_dp_16"
                android:paddingLeft="@dimen/common_dp_16"
                android:paddingRight="@dimen/common_dp_16"
                android:visibility="visible"
                android:paddingTop="@dimen/common_dp_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/export_mnemonic_string"
                    android:textColor="@color/common_title_color"
                    android:textSize="@dimen/common_sp_14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_right_arrow" />

            </RelativeLayout>

            <View
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dp_1"
                android:layout_marginLeft="@dimen/common_dp_16"
                android:layout_marginRight="@dimen/common_dp_16"
                android:background="@color/common_line_color" />

            <RelativeLayout
                android:id="@+id/export_private_key_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/common_dp_16"
                android:paddingLeft="@dimen/common_dp_16"
                android:paddingRight="@dimen/common_dp_16"
                android:paddingTop="@dimen/common_dp_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/export_private_key_string"
                    android:textColor="@color/common_title_color"
                    android:textSize="@dimen/common_sp_14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_right_arrow" />

            </RelativeLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dp_1"
                android:layout_marginLeft="@dimen/common_dp_16"
                android:layout_marginRight="@dimen/common_dp_16"
                android:background="@color/common_line_color" />

            <RelativeLayout
                android:id="@+id/browser_query_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/common_dp_16"
                android:paddingLeft="@dimen/common_dp_16"
                android:paddingRight="@dimen/common_dp_16"
                android:paddingTop="@dimen/common_dp_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/browser_query_string"
                    android:textColor="@color/common_title_color"
                    android:textSize="@dimen/common_sp_14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_right_arrow" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dp_1"
                android:layout_marginLeft="@dimen/common_dp_16"
                android:layout_marginRight="@dimen/common_dp_16"
                android:background="@color/common_line_color" />

        </LinearLayout>


</LinearLayout>