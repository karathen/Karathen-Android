<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_bar_color"
    android:clipChildren="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".AboutUsActivity">

    <com.raistone.wallet.sealwallet.widget.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_52" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_white"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_100"
                android:layout_height="62dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/common_dp_28"
                android:src="@drawable/about_logo_karathen" />

            <TextView
                android:id="@+id/tv_version_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/common_dp_16"
                android:text=""
                android:textColor="@color/edit_text_input_color"
                android:textSize="@dimen/common_sp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_dp_16"
                android:gravity="center"
                android:paddingLeft="@dimen/common_dp_24"
                android:paddingRight="@dimen/common_dp_24"
                android:text="@string/seal_wallet_info_string"
                android:textColor="@color/edit_text_input_color"
                android:textSize="@dimen/common_sp_12" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dp_1"
                android:layout_marginLeft="@dimen/common_dp_16"
                android:layout_marginRight="@dimen/common_dp_16"
                android:layout_marginTop="@dimen/common_dp_20"
                android:background="@color/common_line_color" />


            <RelativeLayout
                android:id="@+id/rl_check_for_updates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/common_dp_16"
                android:paddingLeft="@dimen/common_dp_20"
                android:paddingRight="@dimen/common_dp_20"
                android:paddingTop="@dimen/common_dp_16">

                <ImageView
                    android:id="@+id/iv_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_reset" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common_dp_20"
                    android:layout_toRightOf="@+id/iv_check"
                    android:text="@string/check_for_updates"
                    android:textColor="@color/common_black"
                    android:textSize="@dimen/common_sp_12" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_right_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dp_1"
                android:layout_marginLeft="@dimen/common_dp_16"
                android:layout_marginRight="@dimen/common_dp_16"
                android:background="@color/common_line_color" />

            <RelativeLayout
                android:id="@+id/rl_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/common_dp_16"
                android:paddingLeft="@dimen/common_dp_20"
                android:paddingRight="@dimen/common_dp_20"
                android:paddingTop="@dimen/common_dp_16">

                <ImageView
                    android:id="@+id/iv_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_contact" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common_dp_20"
                    android:layout_toRightOf="@+id/iv_contact"
                    android:text="@string/contact_us"
                    android:textColor="@color/common_black"
                    android:textSize="@dimen/common_sp_12" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_right_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dp_1"
                android:layout_marginLeft="@dimen/common_dp_16"
                android:layout_marginRight="@dimen/common_dp_16"
                android:background="@color/common_line_color" />

            <TextView
                android:id="@+id/tv_website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/common_dp_32"
                android:text="@string/seal_website"
                android:textColor="@color/common_blue_color" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>