<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipChildren="true"
    android:background="@color/title_bar_color"
    tools:context=".ui.TransactionDetailsActivity">

    <com.raistone.wallet.sealwallet.widget.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_52" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/wirte"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10"
            android:gravity="center">

            <TextView
                android:id="@+id/money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/three_color"
                android:textSize="@dimen/space_15"
                tools:text="3393.5995" />

            <TextView
                android:id="@+id/coin_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/space_5"
                android:gravity="bottom"
                android:textColor="#425264"
                android:layout_marginTop="@dimen/space_3"
                android:textSize="@dimen/space_8"
                tools:text="ETH" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_18"
            android:layout_marginTop="@dimen/space_20"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send_address_string"
                android:textColor="@color/three_color"
                android:textSize="@dimen/space_12" />

            <TextView
                android:id="@+id/collection_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:textColor="#90939b"
                android:ellipsize="middle"
                android:textSize="@dimen/space_10"
                tools:text="0xffkashdk79...7239keh830866555" />

            <View
                style="@style/h_line"
                android:layout_marginRight="@dimen/space_18"
                android:layout_marginTop="@dimen/space_20" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_18"
            android:layout_marginTop="@dimen/space_20"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/receive_address_string"
                android:textColor="@color/three_color"
                android:textSize="@dimen/space_12" />

            <TextView
                android:id="@+id/paying_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:ellipsize="middle"
                android:textColor="#90939b"
                android:textSize="@dimen/space_10"
                tools:text="0xffkashdk79...7239keh830866555" />

            <View
                style="@style/h_line"
                android:layout_marginRight="@dimen/space_18"
                android:layout_marginTop="@dimen/space_20" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/remark_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_18"
            android:layout_marginTop="@dimen/space_20"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remark_string"
                android:textColor="@color/three_color"
                android:textSize="@dimen/space_12" />

            <TextView
                android:id="@+id/miner_cost_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:textColor="#90939b"
                android:textSize="@dimen/space_10"
                tools:text="100eth" />

            <View
                style="@style/h_line"
                android:layout_marginRight="@dimen/space_18"
                android:layout_marginTop="@dimen/space_20" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/hx_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/space_18"
            android:layout_marginTop="@dimen/space_20">


            <TextView
                android:id="@+id/hx_Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transfer_Hash_string"
                android:textColor="@color/three_color"
                android:textSize="@dimen/space_12" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/space_10"
                >

                <ImageView
                    android:id="@+id/icon_iv"
                    android:layout_width="@dimen/space_13"
                    android:layout_height="@dimen/space_13"
                    android:background="@drawable/logo"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/hx_value_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_4"
                    android:layout_toLeftOf="@+id/ic_iv"
                    android:singleLine="true"
                    android:text="sssssssssssssss"
                    android:ellipsize="middle"
                    android:layout_toRightOf="@+id/icon_iv"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_5"
                    android:textColor="@color/main_color" />

                <ImageView
                    android:id="@+id/ic_iv"
                    android:layout_width="@dimen/space_20"
                    android:layout_height="@dimen/space_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginRight="@dimen/space_30"
                    android:background="@drawable/copy_address_icon" />

            </RelativeLayout>



        </LinearLayout>
        <View
            style="@style/h_line"
            android:layout_marginLeft="@dimen/space_18"
            android:layout_marginRight="@dimen/space_18"
            android:layout_marginTop="@dimen/space_10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_18"
            android:layout_marginTop="@dimen/space_20"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transfer_time_string"
                android:textColor="@color/three_color"
                android:textSize="@dimen/space_12" />

            <TextView
                android:id="@+id/transaction_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:textColor="#90939b"
                android:textSize="@dimen/space_10"
                tools:text="2018年11月09日11:19:00" />

            <View
                style="@style/h_line"
                android:layout_marginRight="@dimen/space_18"
                android:layout_marginTop="@dimen/space_20" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>